/*designed by Codehouse.pk - Aaliyan Gul*/
body {
  font-family: 'Open Sans', sans-serif;
  font-weight:300;
}
a:hover {
  text-decoration:none;
  color: unset;
}
h2, h3, h4, h5, h6 {
  font-family: 'Open Sans', sans-serif;
  font-weight:500;
  color: #000;
}
p {
  line-height: 22px;
  font-family: 'Open Sans', sans-serif;
  font-size: 15px;	
}
p:last-child {
  margin-bottom:0px;	
}
h1 {
  font-family: 'Open Sans', sans-serif;
  font-size:30px;
  font-weight: 600;
}
h2 {
  font-family: 'Open Sans', sans-serif;
  font-size: 22px;
  font-weight: 600;
}
h3 {
  font-family: 'Open Sans', sans-serif;
  font-size: 18px;
}
h4 {
  font-family: 'Open Sans', sans-serif;
  font-size: 20px;
}
h5 {
  font-family: 'Open Sans', sans-serif;
  font-size: 20px;
  font-weight: 500;
  font-style: italic;
}
h6 {
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
}
.padd {
  padding-right: 20px;
  padding-left: 20px;
}
#section-top {
  background: #0f0f86;
}
.box-spara {
  background: #fff;
  border-top: 6px solid #f7931e;
  padding-top: 15px;
  margin-bottom: 30px; 
}
.media-left img, .media-right img {
    margin: 0 auto;
}
video {
  padding-bottom: 15px;
}
.v-list li {
  padding-bottom: 15px;
}
a.btn-sp {
  background: #0f0f86;
  display: block;
  margin: 30px auto;
  text-decoration: none;
  font-weight: bold;
  text-align: center;
  padding: 12px 0px;
  color: #fff;
  width: 70%;
  border-radius: 7px;
  font-size: 27px;
}
a.btn-sp:hover {
    background: #f7931e;
}
hr {
    border-top: 1px solid #d4d2d2;
}
.s-partner {
  background: #ededed;
  padding: 20px 20px;
  margin-bottom: 30px;
}
ul.list-inline.center-block.text-center li {
  width: 18%;
  vertical-align: middle;
  padding-top: 15px;
}
.clr-b {
  color: #0f0f86;
}
.media-body {
  padding-top: 28px;
  padding-left: 20px;
}
.media-body.b1 {
  padding-top: 0px;
  padding-right: 20px;
}
.s-partner.b-shadow.pd-top {
  margin-top: 46px;
  margin-bottom: 0px;
}
.flex {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}
.flex < div {
  width: 33.333%;
}
.box {
  background: white;
  padding: 20px 30px;
  border-radius: 10px;
  box-shadow: 0px 0px 6px #a19797;
  border:2px solid transparent;
}
.box-1 {
  border:3px solid #0071a8;
  padding: 30px 30px;
  margin-top: -13px;
}
.clr-red {
  color: red;
}
.n-btn {
  background: #f7931e;
  color: white;
  display: block;
  width: 90%;
  margin: 0 auto;
  padding: 13px 0px;
  font-weight: 600;
  border-radius: 5px;
  font-size: 18px;
  border-bottom: 2px solid #5b5b5d;
}
.box span.price.money {
    font-size: 30px;
    font-weight: 500;
}
.box span.discount {
    display: block;min-height: 20px;
}
.box span.discount span {
    font-weight: 600;
}
.bg-o {
  padding-top: 15px;
  background: #f7931e;
  padding-bottom: 15px;
  box-shadow: inset 1px 1px 0px -10px rgb(255, 253, 253), inset 0px 8px 8px 0px rgba(121, 121, 121, 0.75);
}
.bg-o h3 {
  margin: 15px 0;
  font-weight: bold;
}
.bg-o h3 a {
  text-shadow: 2px 2px #616161;
  border-bottom: 2px solid #e2dddd;
  letter-spacing: 2px;
  margin-left: 6px;
}
.bg-o h3 a:hover {
  text-shadow: none;
  border-bottom: 2px solid #000000;
}
.packages {
  display: inline-block;
  width: 100%;
  margin-top: 30px;
  padding: 0 15px;
}
.packages h1 {
    font-size: 18px;
}
.packages h4 {
  font-weight: 700;
}
.s-partner h3 {
    text-align: center;
    font-weight: 700;
    font-size: 15px;
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    text-align: center;
}
.s-partner h3:before, .s-partner h3:after {
    content: '';
    border-top: 2px solid #b5b0b0;
    margin: 0 20px 0 0;
    flex: 1 0 20px;
}
.s-partner h3:after {
  margin: 0 0 0 20px;
}
.clr-w {
  color: white;
}
.top-heading hr {
  margin-top: 5px;
  border-top: 1px solid #8a8686;
}
.copyright {
  padding: 16px 0;
  font-size: 12px;
}
.yotpo .yotpo-testimonials-btn {
  right: 20% !important;
  left: auto !important;
}
.terms {
  font-size: 12px;
  padding: 0 15px;
}
ul.footer-links li a {
  color: #8c8c8c;
}
ul.footer-links li a:hover {
  color: #fff;
}
.n-btn:hover {
  background: #0f0f86;
  color: #fff;
}
.product-details p {
    font-size: 13px;
}
ul.list-inline.v-list li {
    width: 19%;
}
.product-details ul {
  list-style: disc;
  padding: 0 0 0 15px;
  font-size: 13px;
  text-align: left;
}
.media-left, .media-right {
    width: 17%;
}
.media-left p, .media-right p {
    font-size: 11px;
    font-weight: 700;
}
/*Responsive table*/

@media (min-width: 1200px) and (max-width: 2400px) {}
@media (min-width: 992px) and (max-width: 1199px) {}
@media (min-width: 768px) and (max-width: 2400px) {
  .pd-top {
    padding-top: 30px;
    display: inline-block;
    width: 100%;
  }
}
@media (max-width: 767px) {
  .box {
    background: #fff;
    padding: 6px;
    border-radius: 0;
    margin: 6px 0;
    box-shadow: 0px 0px 6px #a19797;
    border: 2px solid transparent;
    min-height: 100px;
  }
  .n-btn {
    width: 100%;
    margin: 6px auto;
    padding: 6px 0px;
    font-weight: 600;
    border-radius: 3px;
    font-size: 18px;
  }
  .product-form {
    margin-top: 30px;
  }
  .media-body p {
    font-size: 12px;
  }
  
  .pd-top {
    padding-top: 30px;
  }
}
@media (max-width: 480px) {
 .n-btn {
    width: 100%;
    margin: 0 auto;
    padding: 3px 0px;
    font-weight: 600;
    border-radius: 2px;
    font-size: 13px;
    margin-top: 5px;
  }
 .box h4 {
    font-size: 12px;
 }
 .product-form {
    margin-top: 20px;
 }
 .media-body {
    padding: 0 !important;
 }
}
